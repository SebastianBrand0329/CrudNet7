@model CrudNet7.Models.Contact
@{
    ViewData["Title"] = "Detalle Contacto!";
}

<h1 class="text-center"> Contacto con .Net 7 (.Net Core MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"> <strong>Detalle Usuario</strong></h3>
            </div>

            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Phone)</li>
                    <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(m => m.MobilePhone)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                </ul>

                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </div>

    </div>
</div>